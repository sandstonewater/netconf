<config> 
  <bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ipv4-bgp-cfg">
   <instance>
    <instance-name>default</instance-name>
    <instance-as>
     <as>0</as>
     <four-byte-as>
      <as>{{BGP_LOCAL_AS}}</as>
      <bgp-running/>
      <default-vrf>
       <bgp-entity>
        <neighbors>
         <neighbor>
          <neighbor-address>{{CSC_BGP_ADD}}</neighbor-address>
          <remote-as>
           <as-xx>0</as-xx>
           <as-yy>{{BGP_REMOTE_AS}}</as-yy>
          </remote-as>
          <advertisement-interval>
           <minimum-interval>0</minimum-interval>
          </advertisement-interval>
          <description>{{DESCRIPTION}}</description>
          <update-source-interface>{{BGP_US_INT}}</update-source-interface>
          <neighbor-afs>
           <neighbor-af>
            <af-name>vp-nv4-unicast</af-name>
            <activate/>
            <route-policy-in>{{BGP_IN_NAME}}</route-policy-in>
            <route-policy-out>{{BGP_OUT_NAME}}</route-policy-out>
            <next-hop-self>true</next-hop-self>
            <default-originate>
             <enable>true</enable>
            </default-originate>
            <soft-reconfiguration>
             <inbound-soft>true</inbound-soft>
             <soft-always>true</soft-always>
            </soft-reconfiguration>
           </neighbor-af>
          </neighbor-afs>
         </neighbor>
        </neighbors>
       </bgp-entity>
      </default-vrf>
     </four-byte-as>
    </instance-as>
   </instance>
  </bgp>
</config>
